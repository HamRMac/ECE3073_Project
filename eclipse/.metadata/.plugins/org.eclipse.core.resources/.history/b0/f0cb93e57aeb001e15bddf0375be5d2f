#include "sys/alt_stdio.h"
#include <io.h>
#include <system.h>

// Define SDRAM BASE
#define SDRAM_BASEADDR 0x2000000
// Define VGA Characteristics
#define BUF_MAX_PIX 19200


/* Use system defines
 * PB_ADR_BASE
 * PB_DATA_BASE
 * PBUFF_WREN_BASE
 * SW_IN_BASE
 * LEDR_OUT_BASE
 * KEY_IN_BASE
 */

void clrBuffer() {
	for (int i = 0; i < BUF_MAX_PIX; i++) {
		  // Set Buffer Address
		  IOWR_32DIRECT(PB_ADR_BASE,0,i);
		  // Enable Writing
		  IOWR_32DIRECT(PBUFF_WREN_BASE,0,1);
		  // Write Data
		  IOWR_32DIRECT(PB_DATA_BASE,0,0);
		  // Disable writing
		  IOWR_32DIRECT(PBUFF_WREN_BASE,0,0);
	  }
	return;
}

int main()
{ 
  alt_putstr("Begin VGA\n");
  // Clear buffer
  clrBuffer();

  /* Event loop never exits. */
  int col;
  col = 0;
  for (int i = 0; i < 159; i++) {
	  // Set Buffer Address
	  IOWR_32DIRECT(PB_ADR_BASE,0,i);
	  // Enable Writing
	  IOWR_32DIRECT(PBUFF_WREN_BASE,0,1);
	  // Write Data
	  IOWR_32DIRECT(PB_DATA_BASE,0,15);
	  // Disable writing
	  IOWR_32DIRECT(PBUFF_WREN_BASE,0,0);
	  col++;
  }
  alt_putstr("PIXBUFF WRITE COMPLETE\n");
  while (1) {
  }

  return 0;
}
