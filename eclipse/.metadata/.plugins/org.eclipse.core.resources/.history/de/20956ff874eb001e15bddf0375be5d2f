#include "sys/alt_stdio.h"
#include <io.h>
#include <system.h>

// Define SDRAM BASE
#define SDRAM_BASEADDR 0x2000000
// Define VGA Characteristics
#define BUF_MAX_PIX 19200


/* Use system defines
 * PB_ADR_BASE
 * PB_DATA_BASE
 * SW_IN_BASE
 * LEDR_OUT_BASE
 * KEY_IN_BASE
 */
int main()
{ 
  alt_putstr("Begin VGA\n");

  /* Event loop never exits. */
  int col;
  col = 0;
  for (int i = 0; i < 19200; i++) {
	  IOWR_32DIRECT(PB_ADR_BASE,0,i);
	  IOWR_32DIRECT(PB_DATA_BASE,0,col);
	  col++;
	  if (col == 16) {
		  col = 0;
	  }
  }
  alt_putstr("PIXBUFF WRITE COMPLETE\n");
  while (1) {
  }

  return 0;
}
